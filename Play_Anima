/*
script: Play_Anima
author: Goldiloxs, TheResistor
version: 1.1.0
*/

string animation;

default
{
    state_entry()
    {
        // get the current animation
        animation = llGetInventoryName(INVENTORY_ANIMATION,0);
        
        llStopObjectAnimation(animation);    // stop the current animation
        
        animation = llGetInventoryName(INVENTORY_ANIMATION,1);
        
        // check if there is a animation in the inventory - to be sure :)
        if (animation)
        {
            llStartObjectAnimation(animation);
        }
    }
}
